# Django
DJANGO_SETTINGS_MODULE=live_assist.settings
DJANGO_SECRET_KEY=change-me-dev-secret

# OpenAI
OPENAI_API_KEY=sk-...your_key_here...
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview
OPENAI_REALTIME_VOICE=verse
TRANSCRIBE_MODEL=gpt-4o-mini-transcribe
OPENAI_BASE_URL=https://api.openai.com

# PostgreSQL
POSTGRES_DB=voice_db
POSTGRES_USER=voice_user
POSTGRES_PASSWORD=your-db-password
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# Celery (Option A - run WITHOUT Redis by using eager mode; recommended for dev/tests)
CELERY_TASK_ALWAYS_EAGER=1
CELERY_TASK_EAGER_PROPAGATES=1
# CELERY_TIMEZONE=Asia/Kolkata

# Celery (Option B - run WITH Redis; uncomment these and set EAGER flags to 0)
# CELERY_TASK_ALWAYS_EAGER=0
# CELERY_TASK_EAGER_PROPAGATES=0
# CELERY_BROKER_URL=redis://127.0.0.1:6379/0
# CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/1

# Admin recipients (comma-separated)
ADMIN_EMAILS=you@example.com

# Email (example: Gmail with App Password)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=you@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=1
DEFAULT_FROM_EMAIL=voice-assistant@yourdomain.com